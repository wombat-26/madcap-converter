{
  "name": "madcap-converter",
  "version": "1.0.0",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "madcap-converter": "./build/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.server.json && chmod +x build/index.js",
    "build:ui": "next build",
    "build:all": "npm run build && npm run build:ui",
    "start": "node build/index.js",
    "start:ui": "next start",
    "dev": "npm run build && npm start",
    "dev:ui": "next dev",
    "dev:ui:safe": "node scripts/dev-server.js",
    "dev:all": "concurrently \"npm run build && npm start\" \"npm run dev:ui\"",
    "serve": "concurrently \"npm start\" \"npm run start:ui\"",
    "lint": "next lint",
    "clean": "rm -rf build .next",
    "clean:cache": "rm -rf .next node_modules/.cache",
    "install:all": "npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "health": "curl -s http://localhost:3000/api/health | jq ."
  },
